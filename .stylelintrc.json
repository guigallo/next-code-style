{
  "extends": "stylelint-config-sass-guidelines",
  "plugins": ["stylelint-prettier"],
  "rules": {
    "prettier/prettier": true,
    "function-parentheses-space-inside": "never-single-line",
    "max-nesting-depth": [
      3,
      {
        "ignore": ["pseudo-classes", "blockless-at-rules"],
        "ignoreAtRules": ["media"]
      }
    ]
  }
}
